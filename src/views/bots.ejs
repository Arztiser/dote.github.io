<%- include('partials/header', {
title: "Rovel Discord List - Bots",
desc: "Find the next bot for your server!",
img: "https://discord.rovelstars.com/assets/img/bot/logo-512.png",
theme,
imglink: undefined
}); %>
<script type="application/ld+json">
{
    "@context": "http://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://discord.rovelstars.com"
    }, {
        "@type": "ListItem",
        "position": 2,
        "name": "Bots",
        "item": "https://discord.rovelstars.com/bots"
    }]
}
</script>
</head>
<body>
 <%- include('partials/load', {theme}); %>
 <%- include('partials/navbar', {user}); %>
 <section class="hero">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title">
                    <img class="emoji-double" src="/assets/img/logo.svg" />
                <br />
                <span>Get your next best bot for your server!</span>
            </h1>
            <h2 class="subtitle">
                Search Bot
            </h2>
            <p class="has-text-centered control has-icons-left has-icons-right">
<input class="input is-rounded is-grey-white" id="searchInput" placeholder="Input a search phrase" type="text">
<span class="icon is-small is-left">
<img class="emoji-double" src="/assets/img/discord-copyright/asset_no_results_dark.png" />
</span>
</p>
<br />
</div>
</div>
</section>
<div class="container is-fluid">
 <div class="section">
                <h2 class="is-size-3 has-text-centered" id="results-title">
                    <span><img class="logo" src="/assets/img/popularity.svg" />&nbsp;New Bots</span>
                </h2>
                <br />
 <div class="columns is-multiline is-centered" id="results">
  <%- bots.map(bot => include('partials/newbotCard', {bot})).join(""); %>
  </div>
</div>
</div>
<script>
let input = document.getElementById("searchInput");
let page = document.getElementById("results");
input.addEventListener("keyup", async (event) => {
        if (event.keyCode === 13) {
          await doSearch();
        } else return;
    });

    function doSearch(){
     document.getElementById("loadtext").innerText="Searching for your query!"
     $("#loading").style.display="";
     $("#loading").style.opacity="1";
     document.getElementById("results-title").innerHTML="";
     fetch("https://discord.rovelstars.com/api/bots?q="+encodeURI(input.value)).then(r=>r.json()).then(bots=>{
      style.opacity="0";
      style.display="none";
      if(!bots.length){ page.innerHTML = "<p>Uh Oh! No Bots found related to your query! ðŸ˜”";twemoji.parse(document.body);}
     else {
      document.getElementById("results-title").innerHtml="";
     page.innerHTML = bots.map(bot=>`<div class="column is-one-third is-bot-card"><div class="box has-background-dark" style="overflow: hidden; height: 100%;"><article class="media"><div class="media-left"><figure class="image is-64x64 is-avatar"><img width="64" height="64" class="is-rounded" loading="lazy" src="${bot.avatarURL.replace(".png",".webp")}" alt="${ bot.username } Avatar" onerror="this.onerror=null;this.src='/assets/img/bot/profile.svg';"><div class="status-${ (bot.status)?bot.status:"online" }"></div></figure></div><div style="overflow: hidden;" class="media-content"><div class="content"><p><span class="is-size-4 title has-text-default is-mobile" style="font-family: discord;"><span>${ bot.username }#<span class="has-text-grey-light">${ bot.discriminator }</span></span></span><br /><span class="has-text-grey-light">${ ((bot.short.length>62)?(bot.short.slice(0,62)+"..."):bot.short) }</span></p><br /><div class="field is-grouped is-grouped-multiline"><div class="control"><div class="tags has-addons"><span class="tag is-black"><i class="fad fa-server has-text-link"></i>&nbsp;In</span><span class="tag is-link">${ (bot.servers)?((bot.servers!=1)?bot.servers:"???"):"???" } Servers</span></div></div><br /><div class="control"><div class="tags has-addons"><span class="tag is-black"><i class="fad fa-caret-circle-up has-text-info"></i>&nbsp;Votes</span><span class="tag is-info">${ bot.votes }</span></div></div><br /></div></div><div class="content-footer"><div class="buttons"><a href="/bots/${ bot.id }" class="box button is-info is-outlined" style=":hover{border-color:#9b84ee;}"><span class="icon"><i class="fad fa-newspaper has-text-info"></i></span><span>View</span></a><a href="${ bot.invite }" target="_blank" class="box button is-link is-outlined"><span class="icon"><i class="fad fa-plus-circle has-text-link"></i></span><span>Add</span></a></div></div></article></div></div>`).join("");}
     });
      }
</script>
 <%- include('partials/footer'); %>
</body>
</html>